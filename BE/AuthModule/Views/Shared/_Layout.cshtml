<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AuthModule</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AuthModule.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AuthModule</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item" id="dataNavItem" style="display: none;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Data" asp-action="Index">Data</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item" id="logoutNavItem" style="display: none;">
                            <button class="btn btn-outline-danger" onclick="authManager.handleLogout(event)">
                                Logout
                            </button>
                        </li>
                        <li class="nav-item me-2" id="loginNavItem">
                            <a class="btn btn-outline-primary" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item" id="registerNavItem">
                            <a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/auth.js" asp-append-version="true"></script>
    <script>
        // Update navigation bar based on authentication status
        function updateNavigationBar() {
            const token = localStorage.getItem('authToken');
            const logoutNavItem = document.getElementById('logoutNavItem');
            const loginNavItem = document.getElementById('loginNavItem');
            const registerNavItem = document.getElementById('registerNavItem');
            const dataNavItem = document.getElementById('dataNavItem');
            
            if (token) {
                // User is authenticated - show logout and data, hide login/register
                if (logoutNavItem) logoutNavItem.style.display = 'block';
                if (dataNavItem) dataNavItem.style.display = 'block';
                if (loginNavItem) loginNavItem.style.display = 'none';
                if (registerNavItem) registerNavItem.style.display = 'none';
            } else {
                // User is not authenticated - show login/register, hide logout and data
                if (logoutNavItem) logoutNavItem.style.display = 'none';
                if (dataNavItem) dataNavItem.style.display = 'none';
                if (loginNavItem) loginNavItem.style.display = 'block';
                if (registerNavItem) registerNavItem.style.display = 'block';
            }
        }
        
        // Update navigation on page load
        document.addEventListener('DOMContentLoaded', function() {
            updateNavigationBar();
        });
        
        // Listen for storage changes (when token is set/removed in other tabs)
        window.addEventListener('storage', function(e) {
            if (e.key === 'authToken') {
                updateNavigationBar();
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
